@model OutilEnquete.ViewModels.Reponse

@{
    ViewBag.Title = Model.Questionnaire2.TitreQuestionnaire;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<div class="well well-small">
    <h4>Information de Reponses</h4>
</div>
<ul class="unstyled bordered skip-first">
    <li class="row">
        <div class="span9">
            <label><b>User</b></label>
            <p class="help-block">
                The user that completed this survey.
            </p>
        </div>
        <div class="span3">
            <div class="well well-small">
                @Model.CreatedBy
            </div>
        </div>
    </li>
    <li class="row">
        <div class="span9">
            <label><b>Date de l'enquete</b></label>
            <p class="help-block">
                Date de Audit.
            </p>
        </div>
        <div class="span3">
            <div class="well well-small">
                @Model.CreatedOn.ToString("d")
            </div>
        </div>
    </li>
</ul>

<div class="well well-small">
    <h4>Questions</h4>
</div>
<ul class="unstyled bordered skip-first">
    @foreach (var item in Model.Answers)
    {
        <li class="row">
            <div class="span9">
                @Html.Raw(item.IdQuestion)
            </div>
            <div class="span3">
                <div class="well well-small">@item.RawValue</div>
                <div class="well well-small">@item.EtatReponse</div>
            </div>
        </li>
    }
</ul>